
RewriteEngine on

# Redirect to:
#  - Dev / Testing: https://rawgit.com/caiogit/bird-a/master/ontology/bird-a.owl
#  - Production: https://cdn.rawgit.com/caiogit/bird-a/master/ontology/bird-a.owl


# Cut&Pasted from https://github.com/perma-id/w3id.org/blob/master/food/.htaccess
Header set Access-Control-Allow-Origin *
Options +FollowSymLinks

RewriteRule ^$ https://rawgit.com/caiogit/bird-a/master/ontology/bird-a.owl [R=302,L]
#RewriteRule ^(.+)$ http://example.com/$1 [R=302,L]

 
# Cut&Pasted from http://www.essepuntato.it/lode

# Rewrite rule to serve HTML content
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^bird-a$ http://www.essepuntato.it/lode/http://w3id.org/bird-a [R=303,L]

# Rewrite rule to serve RDF/XML content if requested
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^$ bird-a.owl [R=303]

# Choose the default response
RewriteRule ^$ bird-a.owl [R=303]
